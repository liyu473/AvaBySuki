<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    xmlns:vm="using:AvaAIChat.ViewModels"
    xmlns:models="clr-namespace:SukiUI.Models;assembly=SukiUI"
    xmlns:converters="using:AvaAIChat.Converters"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:Class="AvaAIChat.Views.SettingsPage"
    x:DataType="vm:SettingsViewModel">

    <UserControl.Resources>
        <converters:ObjectEqualityConverter x:Key="ObjectEqualityConverter" />
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <converters:IsCustomColorThemeConverter x:Key="IsCustomColorThemeConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" MaxWidth="800">
            <StackPanel Spacing="5">
                <TextBlock Text="设置" FontSize="32" FontWeight="Bold" />
                <TextBlock Text="个性化您的应用体验" FontSize="14" Opacity="0.6" />
            </StackPanel>

            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Value="mdi-theme-light-dark"
                            FontSize="24"
                            DockPanel.Dock="Left"
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SukiPrimaryColor}" />
                        <StackPanel>
                            <TextBlock Text="主题模式" FontSize="18" FontWeight="SemiBold" />
                            <TextBlock
                                Text="{Binding CurrentThemeName, StringFormat='当前: {0}'}"
                                FontSize="13"
                                Opacity="0.7"
                                Margin="0,5,0,0" />
                        </StackPanel>
                    </DockPanel>

                    <Grid ColumnDefinitions="*,10,*">
                        <RadioButton
                            Height="138"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            Classes="GigaChips"
                            GroupName="ThemeMode"
                            IsChecked="{Binding !IsDarkTheme, Mode=OneWay}"
                            Command="{Binding SwitchToLightCommand}">
                            <StackPanel
                                Spacing="8"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,4"
                                VerticalAlignment="Center">
                                <i:Icon Value="mdi-white-balance-sunny" FontSize="32" />
                                <TextBlock
                                    Text="浅色"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Height="138"
                            VerticalContentAlignment="Center"
                            Classes="GigaChips"
                            GroupName="ThemeMode"
                            IsChecked="{Binding IsDarkTheme, Mode=OneWay}"
                            Command="{Binding SwitchToDarkCommand}">
                            <StackPanel
                                Spacing="8"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,0,4">
                                <i:Icon Value="mdi-moon-waning-crescent" FontSize="32" />
                                <TextBlock
                                    Text="深色"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>
                    </Grid>

                    <Border Padding="15" Background="{DynamicResource SukiBackground}" CornerRadius="8">
                        <DockPanel>
                            <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding IsDarkTheme}" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="快速切换" FontSize="14" FontWeight="SemiBold" />
                                <TextBlock
                                    Text="一键切换亮色/暗色主题"
                                    FontSize="12"
                                    Opacity="0.6"
                                    Margin="0,3,0,0" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </sukiUi:GlassCard>

            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Value="mdi-palette"
                            FontSize="24"
                            DockPanel.Dock="Left"
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SukiPrimaryColor}" />
                        <StackPanel>
                            <TextBlock Text="主题颜色" FontSize="18" FontWeight="SemiBold" />
                            <TextBlock
                                Text="选择您喜欢的主题色"
                                FontSize="13"
                                Opacity="0.7"
                                Margin="0,5,0,0" />
                        </StackPanel>
                    </DockPanel>

                    <ItemsControl ItemsSource="{Binding AvailableColors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:SukiColorTheme">
                                <Button
                                    Width="80"
                                    Height="80"
                                    Margin="5"
                                    CornerRadius="10"
                                    Padding="0"
                                    Command="{Binding $parent[UserControl].((vm:SettingsViewModel)DataContext).ChangeColorThemeCommand}"
                                    CommandParameter="{Binding}"
                                    ToolTip.Tip="{Binding DisplayName}">
                                    <Button.Styles>
                                        <Style Selector="Button">
                                            <Setter Property="Background" Value="{Binding PrimaryBrush}" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="3" />
                                        </Style>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="BorderBrush" Value="{DynamicResource SukiText}" />
                                        </Style>
                                        <Style Selector="Button[IsPressed=True]">
                                            <Setter Property="RenderTransform" Value="scale(0.95)" />
                                        </Style>
                                    </Button.Styles>

                                    <!--  右键菜单  -->
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="删除自定义颜色" Command="{Binding $parent[UserControl].((vm:SettingsViewModel)DataContext).DeleteColorThemeCommand}" CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <i:Icon Value="mdi-delete" FontSize="16" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Button.ContextMenu>

                                    <!--  选中标记  -->
                                    <i:Icon Value="mdi-check-circle" FontSize="28" Foreground="White">
                                        <i:Icon.IsVisible>
                                            <MultiBinding Converter="{StaticResource ObjectEqualityConverter}">
                                                <Binding Path="." />
                                                <Binding Path="$parent[UserControl].((vm:SettingsViewModel)DataContext).SelectedColorTheme" />
                                            </MultiBinding>
                                        </i:Icon.IsVisible>
                                    </i:Icon>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  添加自定义颜色按钮  -->
                    <Button
                        Width="80"
                        Height="80"
                        Margin="5"
                        CornerRadius="10"
                        Padding="0"
                        Command="{Binding ShowAddCustomColorDialogCommand}"
                        ToolTip.Tip="添加自定义颜色"
                        Background="{DynamicResource SukiCardBackground}"
                        BorderBrush="{DynamicResource SukiLightBorderBrush}"
                        BorderThickness="2">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="BorderBrush" Value="{DynamicResource SukiPrimaryColor}" />
                                <Setter Property="Background" Value="{DynamicResource SukiBackground}" />
                            </Style>
                            <Style Selector="Button[IsPressed=True]">
                                <Setter Property="RenderTransform" Value="scale(0.95)" />
                            </Style>
                        </Button.Styles>
                        <i:Icon Value="mdi-plus" FontSize="36" Foreground="{DynamicResource SukiPrimaryColor}" />
                    </Button>

                    <Border Padding="15" Background="{DynamicResource SukiBackground}" CornerRadius="8">
                        <DockPanel>
                            <Border
                                Width="30"
                                Height="30"
                                CornerRadius="15"
                                Background="{Binding SelectedColorTheme.PrimaryBrush}"
                                DockPanel.Dock="Left"
                                Margin="0,0,10,0" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="当前主题色" FontSize="12" Opacity="0.6" />
                                <TextBlock
                                    Text="{Binding SelectedColorTheme.DisplayName}"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Margin="0,2,0,0" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </sukiUi:GlassCard>

            <!--  关于  -->
            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="15">
                    <DockPanel>
                        <i:Icon
                            Value="mdi-information"
                            FontSize="24"
                            DockPanel.Dock="Left"
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SukiPrimaryColor}" />
                        <StackPanel>
                            <TextBlock Text="关于" FontSize="18" FontWeight="SemiBold" />
                            <TextBlock
                                Text="AvaAIChat v1.0.0"
                                FontSize="13"
                                Opacity="0.7"
                                Margin="0,5,0,0" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </sukiUi:GlassCard>
        </StackPanel>
    </ScrollViewer>
</UserControl>