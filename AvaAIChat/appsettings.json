{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Avalonia": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u3}] {SourceContext:l} @{Scope:l}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u3}] {SourceContext:l} @{Scope:l}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level:u3}] {SourceContext:l} @{Scope:l}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "App": {
    "Name": "AvaAIChat",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "OpenRouter": {
    "ApiKey": "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",
    "BaseUrl": "https://openrouter.ai/api/v1",
    "Model": "alibaba/tongyi-deepresearch-30b-a3b:free",
    "MaxTokens": 4096,
    "Temperature": 0.7
  }
}