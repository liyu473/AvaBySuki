<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AvaAIChat.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaAIChat.Controls.CustomChatControl"
             x:DataType="vm:ChatViewModel"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:vm="clr-namespace:AvaAIChat.ViewModels">

    <UserControl.Styles>
        <Style Selector="Border.message-container">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="MaxWidth" Value="600" />
        </Style>

        <Style Selector="Border.user-message">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style Selector="Border.user-message-bg">
            <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor}" />
            <Setter Property="Opacity" Value="0.2" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>

        <Style Selector="Border.ai-message">
            <Setter Property="Background" Value="{DynamicResource SukiCardBackground}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style Selector="TextBlock.message-text, SelectableTextBlock.message-text">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        
        <!-- å¯é€‰æ‹©æ–‡æœ¬çš„å…‰æ ‡æ ·å¼ -->
        <Style Selector="SelectableTextBlock.message-text">
            <Setter Property="Cursor" Value="IBeam" />
        </Style>

        <Style Selector="Border.avatar">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="ClipToBounds" Value="True" />
        </Style>

        <!-- å‘é€/åœæ­¢æŒ‰é’®æ ·å¼ -->
        <Style Selector="Button.send-stop-btn">
            <!-- é¼ æ ‡æ‚¬åœå’Œç‚¹å‡»çš„åŠ¨ç”»æ•ˆæžœ -->
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.send-stop-btn:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.1)" />
        </Style>
        <Style Selector="Button.send-stop-btn:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>
        
        <!-- å‘é€æŒ‰é’®èƒŒæ™¯å±‚ -->
        <Style Selector="Border.send-btn-bg">
            <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor}" />
            <Setter Property="Opacity" Value="0.2" />
            <Setter Property="CornerRadius" Value="22" />
        </Style>
    </UserControl.Styles>

    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Bottom"
                Background="{DynamicResource SukiBackground}"
                Padding="15"
                BorderBrush="{DynamicResource SukiLightBorderBrush}"
                BorderThickness="0,2,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0"
                         x:Name="InputTextBox"
                         Text="{Binding InputText}"
                         Watermark="è¾“å…¥æ¶ˆæ¯..."
                         IsEnabled="{Binding !IsSending}"
                         VerticalAlignment="Center"
                         Background="{DynamicResource SukiCardBackground}"
                         BorderBrush="{DynamicResource SukiLightBorderBrush}"
                         Foreground="{DynamicResource SukiText}"
                         Padding="12,8"
                         CornerRadius="6">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding SendMessageCommand}" />
                    </TextBox.KeyBindings>
                </TextBox>

                <!-- å‘é€/åœæ­¢æŒ‰é’® -->
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <!-- åœæ­¢æŒ‰é’® -->
                    <Button Classes="send-stop-btn"
                            Command="{Binding StopGenerationCommand}"
                            IsVisible="{Binding IsSending}"
                            Background="#EF4444"
                            Foreground="White"
                            Width="44"
                            Height="44"
                            CornerRadius="22"
                            Padding="0"
                            ToolTip.Tip="åœæ­¢ç”Ÿæˆ">
                        <i:Icon Value="mdi-stop" FontSize="24" />
                    </Button>

                    <!-- å‘é€æŒ‰é’® -->
                    <Grid Width="44" Height="44" IsVisible="{Binding !IsSending}">
                        <!-- æ·¡è‰²èƒŒæ™¯å±‚ -->
                        <Border Classes="send-btn-bg" />
                        
                        <!-- æŒ‰é’®å±‚ -->
                        <Button Classes="send-stop-btn"
                                Command="{Binding SendMessageCommand}"
                                Background="Transparent"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                Width="44"
                                Height="44"
                                CornerRadius="22"
                                Padding="0"
                                ToolTip.Tip="å‘é€æ¶ˆæ¯">
                            <i:Icon Value="mdi-send" FontSize="24" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <ScrollViewer x:Name="MessageScrollViewer"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:ChatMessageModel">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- AIå¤´åƒï¼ˆå·¦ä¾§ï¼‰ -->
                            <Border Grid.Column="0"
                                    Classes="avatar"
                                    Margin="0,0,10,0"
                                    IsVisible="{Binding !IsUser}">
                                <Image Source="avares://AvaAIChat/Assets/robot.jpg"
                                       Stretch="UniformToFill" />
                            </Border>

                            <!-- æ¶ˆæ¯å†…å®¹ -->
                            <Grid Grid.Column="1"
                                  HorizontalAlignment="{Binding IsUser, Converter={StaticResource BoolToAlignmentConverter}}"
                                  MaxWidth="600"
                                  Margin="10">
                                
                                <!-- èƒŒæ™¯å±‚ï¼ˆç”¨æˆ·æ¶ˆæ¯æ—¶æ˜¾ç¤ºåŠé€æ˜Žä¸»é¢˜è‰²ï¼‰ -->
                                <Border Classes="user-message-bg"
                                        IsVisible="{Binding IsUser}" />
                                
                                <!-- å†…å®¹å±‚ -->
                                <Border Classes.message-container="True"
                                        Classes.user-message="{Binding IsUser}"
                                        Classes.ai-message="{Binding !IsUser}">
                                    <StackPanel>
                                    <!-- æ€è€ƒä¸­æŒ‡ç¤ºå™¨ -->
                                    <StackPanel Orientation="Horizontal"
                                                IsVisible="{Binding IsThinking}"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ’­ AIæ­£åœ¨æ€è€ƒä¸­..."
                                                   Classes="message-text"
                                                   FontStyle="Italic" />
                                    </StackPanel>

                                    <!-- æŽ¨ç†è¿‡ç¨‹ï¼ˆå¯æŠ˜å ï¼‰ -->
                                    <Expander IsVisible="{Binding HasReasoning}"
                                              IsExpanded="{Binding IsReasoningExpanded}"
                                              Margin="0,0,0,8"
                                              Background="{DynamicResource SukiBackground}"
                                              CornerRadius="4">
                                        <Expander.Header>
                                            <TextBlock Text="ðŸ§  æŽ¨ç†è¿‡ç¨‹"
                                                       Foreground="{DynamicResource SukiLowText}"
                                                       FontSize="12"
                                                       FontWeight="Bold" />
                                        </Expander.Header>
                                        <ItemsControl ItemsSource="{Binding ReasoningSteps}"
                                                      Margin="10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,4">
                                                        <TextBlock Text="â–¸"
                                                                   Foreground="{DynamicResource SukiPrimaryColor}"
                                                                   Margin="0,0,8,0" />
                                                        <SelectableTextBlock Text="{Binding}"
                                                                             TextWrapping="Wrap"
                                                                             Foreground="{DynamicResource SukiLowText}"
                                                                             FontSize="12" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                    <!-- æ­£æ–‡å†…å®¹ -->
                                    <SelectableTextBlock Text="{Binding Content}"
                                                         Classes="message-text"
                                                         IsVisible="{Binding !IsThinking}" />

                                    <!-- æ—¶é—´æˆ³ -->
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                               Foreground="{DynamicResource SukiLowText}"
                                               FontSize="10"
                                               Margin="0,4,0,0"
                                               HorizontalAlignment="Right" />
                                </StackPanel>
                                </Border>
                            </Grid>

                            <!-- ç”¨æˆ·å¤´åƒï¼ˆå³ä¾§ï¼‰ -->
                            <Border Grid.Column="2"
                                    Classes="avatar"
                                    Margin="10,0,0,0"
                                    IsVisible="{Binding IsUser}">
                                <Image Source=" avares://AvaAIChat/Assets/TestPng.png"
                                       Stretch="UniformToFill" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>