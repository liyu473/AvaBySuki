{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Avalonia": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u3}] {SourceContext:l} @{MemberName}:{LineNumber}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u3}] {SourceContext:l} @ {MemberName}:{LineNumber}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level:u3}] {SourceContext:l} @ {MemberName}:{LineNumber}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "App": {
    "Name": "AvaAIChat",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "OpenRouter": {
    "ApiKey": "0ee627c393894433bcfd1fc746c4625a.786xNhKw2B9jUYxH_KccwpF8",
    "BaseUrl": "http://localhost:11434/v1",
    "Model": "deepseek-r1:7b",
    "MaxTokens": 4096,
    "Temperature": 0.3,
    "TopP": 0.95
  }
}