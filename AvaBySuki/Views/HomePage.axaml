<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaBySuki.ViewModels"
    xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:Class="AvaBySuki.Views.HomePage"
    x:DataType="vm:HomePageViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" MaxWidth="900">
            <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="欢迎来到首页" FontSize="24" FontWeight="Bold" />

                <TextBlock Text="Welcome to Avalonia!" FontSize="16" />

                <TextBlock Text="这是使用 MVVM 模式创建的动态页面" FontSize="14" Margin="0,20,0,0" />

                <Border
                    Margin="0,20,0,0"
                    Padding="20"
                    Background="{DynamicResource SukiCardBackground}"
                    CornerRadius="10">
                    <StackPanel Spacing="10">
                        <TextBlock Text="✨ 功能特性" FontSize="18" FontWeight="SemiBold" />
                        <TextBlock Text="• 基于 Avalonia UI 11.3" FontSize="14" />
                        <TextBlock Text="• 使用 SukiUI 主题" FontSize="14" />
                        <TextBlock Text="• MVVM 架构" FontSize="14" />
                        <TextBlock Text="• Material Design Icons" FontSize="14" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="欢迎使用" FontSize="32" FontWeight="Bold" />
                <TextBlock Text="测试 Dialog 和 Toast 扩展方法" FontSize="14" Opacity="0.6" />
            </StackPanel>

            <!--  Dialog 测试  -->
            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Value="mdi-message-alert"
                            FontSize="24"
                            DockPanel.Dock="Left"
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SukiPrimaryColor}" />
                        <StackPanel>
                            <TextBlock Text="对话框测试" FontSize="18" FontWeight="SemiBold" />
                            <TextBlock
                                Text="测试各种类型的对话框"
                                FontSize="13"
                                Opacity="0.7"
                                Margin="0,5,0,0" />
                        </StackPanel>
                    </DockPanel>

                    <UniformGrid Columns="3" Rows="2">
                        <Button
                            Content="成功对话框"
                            Command="{Binding ShowSuccessDialogCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="错误对话框"
                            Command="{Binding ShowErrorDialogCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="警告对话框"
                            Command="{Binding ShowWarningDialogCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="信息对话框"
                            Command="{Binding ShowInfoDialogCommand}"
                            Margin="5"
                            Height="50" />

                        <Button
                            Content="确认对话框"
                            Command="{Binding ShowConfirmDialogCommand}"
                            Margin="5"
                            Height="50" />

                        <Button Content="删除确认" Command="{Binding ShowDeleteConfirmCommand}" Margin="5">
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </sukiUi:GlassCard>

            <!--  Toast 测试  -->
            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Value="mdi-bell-ring"
                            FontSize="24"
                            DockPanel.Dock="Left"
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SukiPrimaryColor}" />
                        <StackPanel>
                            <TextBlock Text="Toast 通知测试" FontSize="18" FontWeight="SemiBold" />
                            <TextBlock
                                Text="测试各种类型的 Toast 通知"
                                FontSize="13"
                                Opacity="0.7"
                                Margin="0,5,0,0" />
                        </StackPanel>
                    </DockPanel>

                    <UniformGrid Columns="3" Rows="2">
                        <Button
                            Content="成功 Toast"
                            Command="{Binding ShowSuccessToastCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="错误 Toast"
                            Command="{Binding ShowErrorToastCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="警告 Toast"
                            Command="{Binding ShowWarningToastCommand}"
                            Margin="5"
                            Height="50">
                        </Button>

                        <Button
                            Content="信息 Toast"
                            Command="{Binding ShowInfoToastCommand}"
                            Margin="5"
                            Height="50" />

                        <Button
                            Content="操作成功"
                            Command="{Binding ShowOperationSuccessCommand}"
                            Margin="5"
                            Height="50" />

                        <Button
                            Content="操作失败"
                            Command="{Binding ShowOperationErrorCommand}"
                            Margin="5"
                            Height="50" />
                    </UniformGrid>
                </StackPanel>
            </sukiUi:GlassCard>
        </StackPanel>
    </ScrollViewer>
</UserControl>