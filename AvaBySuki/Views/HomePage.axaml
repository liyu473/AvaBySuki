<UserControl
    x:Class="AvaBySuki.Views.HomePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    xmlns:icon="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:vm="using:AvaBySuki.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:HomePageViewModel"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            MaxWidth="900"
            Margin="20"
            Spacing="20">
            <StackPanel Margin="20" Spacing="10">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="欢迎来到首页" />

                <TextBlock FontSize="16" Text="Welcome to Avalonia!" />

                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="14"
                    Text="这是使用 MVVM 模式创建的动态页面" />

                <Border
                    Margin="0,20,0,0"
                    Padding="20"
                    Background="{DynamicResource SukiCardBackground}"
                    CornerRadius="10">
                    <StackPanel Spacing="10">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="✨ 功能特性" />
                        <TextBlock FontSize="14" Text="• 基于 Avalonia UI 11.3" />
                        <TextBlock FontSize="14" Text="• 使用 SukiUI 主题" />
                        <TextBlock FontSize="14" Text="• MVVM 架构" />
                        <TextBlock FontSize="14" Text="• Material Design Icons" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock
                    FontSize="32"
                    FontWeight="Bold"
                    Text="欢迎使用" />
                <TextBlock
                    FontSize="14"
                    Opacity="0.6"
                    Text="测试 Dialog 和 Toast 扩展方法" />
            </StackPanel>

            <!--  Dialog 测试  -->
            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Margin="0,0,15,0"
                            DockPanel.Dock="Left"
                            FontSize="24"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            Value="mdi-message-alert" />
                        <StackPanel>
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="对话框测试" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Opacity="0.7"
                                Text="测试各种类型的对话框" />
                        </StackPanel>
                    </DockPanel>

                    <UniformGrid Columns="3" Rows="3">
                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowSuccessDialogCommand}"
                            Content="成功对话框" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowErrorDialogCommand}"
                            Content="错误对话框" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowWarningDialogCommand}"
                            Content="警告对话框" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowInfoDialogCommand}"
                            Content="信息对话框" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowConfirmDialogCommand}"
                            Content="确认对话框" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowDeleteConfirmCommand}"
                            Content="删除确认" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowCustomContentDialogCommand}"
                            Content="自定义内容测试" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowCustomContentConfirmDialogCommand}"
                            Content="自定义内容确认测试" />
                    </UniformGrid>
                </StackPanel>
            </sukiUi:GlassCard>

            <!--  Toast 测试  -->
            <sukiUi:GlassCard Padding="25" CornerRadius="15">
                <StackPanel Spacing="20">
                    <DockPanel>
                        <i:Icon
                            Margin="0,0,15,0"
                            DockPanel.Dock="Left"
                            FontSize="24"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            Value="mdi-bell-ring" />
                        <StackPanel>
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Toast 通知测试" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Opacity="0.7"
                                Text="测试各种类型的 Toast 通知" />
                        </StackPanel>
                    </DockPanel>

                    <UniformGrid Columns="3" Rows="2">
                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowSuccessToastCommand}"
                            Content="成功 Toast" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowErrorToastCommand}"
                            Content="错误 Toast" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowWarningToastCommand}"
                            Content="警告 Toast" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowInfoToastCommand}"
                            Content="信息 Toast" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowOperationSuccessCommand}"
                            Content="自定义 Toast" />

                        <Button
                            Height="50"
                            Margin="5"
                            Command="{Binding ShowOperationErrorCommand}"
                            Content="操作失败" />
                    </UniformGrid>
                </StackPanel>
            </sukiUi:GlassCard>

            <sukiUi:GlassCard>
                <StackPanel Spacing="8">
                    <TextBlock>密码框测试</TextBlock>
                    <TextBox
                        Name="PasswordTextBox"
                        Margin="0,0,0,25"
                        suki:TextBoxExtensions.AddDeleteButton="True"
                        suki:TextBoxExtensions.Prefix="{icon:MaterialIconExt Kind=Password}"
                        Classes="revealPasswordButton"
                        PasswordChar="*"
                        Text="{Binding Password}"
                        Watermark="*******" />
                </StackPanel>
            </sukiUi:GlassCard>
        </StackPanel>
    </ScrollViewer>
</UserControl>